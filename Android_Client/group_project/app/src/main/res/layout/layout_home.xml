<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMPGC27: Programming for Business Analytics"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Project"
                android:textColor="@color/blue"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_ucl"/>
        <TextView
            android:id="@+id/upload_bt"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/rounded_all_blue_et"
            android:text="Upload Photo to get location"
            android:layout_marginTop="40dp"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/history_bt"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/rounded_all_blue_et"
            android:text="History footprint"
            android:layout_marginTop="20dp"
            android:textSize="14dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/question_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Any questions?"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textColor="@color/blue"
        android:textSize="11dp"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
